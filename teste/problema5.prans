begin
void mdc(int n, int m, int *r) {
    inicio:
    if (n == 0) {
        *r = m;
        goto fim;
    } else if (m == 0) {
        *r = n;
        goto fim;
    } else if (n == 1 || m == 1) {
        *r = 1;
        goto fim;
    } else if (n > m) {
        n = n % m;
        goto inicio;
    } else {
        m = m % n;
        goto inicio;
    }

    fim:
    return;
}

main{
    int n, m;
    print("Digite o valor de n: ");
    scanf("%d", &n);
    print("Digite o valor de m: ");
    scanf("%d", &m);

    int resultado;
    mdc(n, m, &resultado);

    print("O maior divisor comum entre %d e %d Ã©: %d\n", n, m, resultado);
}
end